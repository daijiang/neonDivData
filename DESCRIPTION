Package: neonDivData
Type: Package
Title: Standardized NEON Organismal Data for Biodiversity Research
Version: 0.1.0
Authors@R: c(
    person(given = "Daijiang", family = "Li", email = "daijianglee@gmail.com", role = c("aut", "cre"), comment = c(ORCID = "0000-0002-0925-3421")),
    person(given = "Firstname", family = "Lastname", email = "emailaddress", role = c("aut")),
